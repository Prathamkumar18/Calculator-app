<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.neuro.MainActivity"
    android:background="#070707"
    android:orientation="vertical">

    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        app:neumorph_shadowColorDark="#27537A"
        app:neumorph_shadowColorLight="@color/red"
        app:neumorph_shapeType="flat"
        style="@style/Widget.Neumorph.CardView"
        android:clickable="true"
        android:focusable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:autoSizeMaxTextSize="25dp"
                android:autoSizeMinTextSize="20dp"
                android:autoSizeTextType="uniform"
                android:gravity="end"
                android:hint="0"
                android:textColor="@color/purple_200"
                android:textColorHint="#E49782"
                android:textSize="38sp" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:autoSizeMaxTextSize="25dp"
                android:autoSizeMinTextSize="20dp"
                android:gravity="end"
                android:hint="0"
                android:textColor="@color/teal_200"
                android:textColorHint="#E49782"
                android:textSize="38sp" />
        </RelativeLayout>
    </soup.neumorphism.NeumorphCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <soup.neumorphism.NeumorphButton
                android:layout_width="0dp"
                android:id="@+id/off"
                android:text="ðŸ“´"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="onclickoff"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"
                style="@style/Widget.Neumorph.CardView"
                android:clickable="true"
                android:focusable="true"/>
            <soup.neumorphism.NeumorphButton
                android:layout_width="0dp"
                android:id="@+id/clear"
                android:text="C"
                android:onClick="onclickC"
                android:textSize="35sp"
                android:textColor="@color/purple_200"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:neumorph_shadowColorLight="@color/red"
                style="@style/Widget.Neumorph.CardView"
                android:clickable="true"
                android:focusable="true"
                app:neumorph_shadowColorDark="#27537A"/>
            <soup.neumorphism.NeumorphButton
                android:layout_width="0dp"
                android:id="@+id/mod"
                android:text="%"
                android:onClick="onclickMod"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textColor="@color/purple_200"
                android:layout_margin="5dp"
                style="@style/Widget.Neumorph.CardView"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>
            <soup.neumorphism.NeumorphButton
                android:id="@+id/add"
                android:text="+"
                android:textSize="35sp"
                android:gravity="center"
                android:onClick="onclickAdd"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="0dp"
                android:textColor="@color/purple_200"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <soup.neumorphism.NeumorphButton
                android:id="@+id/one"
                android:layout_width="0dp"
                android:text="1"
                android:textSize="35sp"
                android:onClick="onclickOne"
                android:textColor="@color/teal_200"
                style="@style/Widget.Neumorph.CardView"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:neumorph_shadowColorLight="@color/red"

                app:neumorph_shadowColorDark="#27537A"/>
            <soup.neumorphism.NeumorphButton
                android:id="@+id/two"
                android:text="2"
                android:onClick="onclickTwo"
                android:textSize="35sp"
                style="@style/Widget.Neumorph.CardView"
                android:gravity="center"
                android:layout_width="0dp"
                android:textColor="@color/teal_200"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>
            <soup.neumorphism.NeumorphButton
                android:id="@+id/three"
                android:layout_width="0dp"
                android:text="3"
                android:onClick="onclickThree"
                android:textSize="35sp"
                style="@style/Widget.Neumorph.CardView"
                android:gravity="center"
                android:textColor="@color/teal_200"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>
            <soup.neumorphism.NeumorphButton
                android:layout_width="0dp"
                android:id="@+id/sub"
                android:text="-"
                android:onClick="onclickSub"
                android:textSize="35sp"
                android:gravity="center"
                style="@style/Widget.Neumorph.CardView"
                android:layout_height="match_parent"
                android:textColor="@color/purple_200"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <soup.neumorphism.NeumorphButton
                android:id="@+id/four"
                android:layout_width="0dp"
                android:text="4"
                android:textSize="35sp"
                android:onClick="onclickFour"
                android:gravity="center"
                android:textColor="@color/teal_200"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                style="@style/Widget.Neumorph.CardView"
                android:clickable="true"
                android:focusable="true"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>
            <soup.neumorphism.NeumorphButton
                android:id="@+id/five"
                android:onClick="onclickFive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="5"
                android:textColor="@color/teal_200"
                android:textSize="35sp"
                style="@style/Widget.Neumorph.CardView"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>
            <soup.neumorphism.NeumorphButton
                android:id="@+id/six"
                android:text="6"
                android:onClick="onclickSix"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:textColor="@color/teal_200"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:clickable="true"
                style="@style/Widget.Neumorph.CardView"
                android:focusable="true"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>
            <soup.neumorphism.NeumorphButton
                android:id="@+id/mul"
                android:text="*"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                style="@style/Widget.Neumorph.CardView"
                android:onClick="onclickMul"
                android:textColor="@color/purple_200"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <soup.neumorphism.NeumorphButton
                android:id="@+id/seven"
                android:text="7"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:onClick="onclickSeven"
                android:layout_height="match_parent"
                android:textColor="@color/teal_200"
                android:layout_margin="5dp"
                android:layout_weight="1"
                style="@style/Widget.Neumorph.CardView"
                android:clickable="true"
                android:focusable="true"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>
            <soup.neumorphism.NeumorphButton
                android:id="@+id/eight"
                android:text="8"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:onClick="onclickEight"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textColor="@color/teal_200"
                android:layout_weight="1"
                android:clickable="true"
                style="@style/Widget.Neumorph.CardView"
                android:focusable="true"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>
            <soup.neumorphism.NeumorphButton
                android:layout_width="0dp"
                android:text="9"
                android:textSize="35sp"
                android:onClick="onclickNine"
                android:gravity="center"
                android:textColor="@color/teal_200"
                android:id="@+id/nine"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                style="@style/Widget.Neumorph.CardView"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>
            <soup.neumorphism.NeumorphButton
                android:layout_width="0dp"
                android:id="@+id/div"
                android:text="/"
                android:textSize="35sp"
                android:onClick="onclickDiv"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/purple_200"
                style="@style/Widget.Neumorph.CardView"
                android:clickable="true"
                android:focusable="true"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <soup.neumorphism.NeumorphButton
                android:id="@+id/zerozero"
                android:text="00"
                android:textSize="35sp"
                android:gravity="center"
                android:onClick="onclickZerozero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textColor="@color/teal_200"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                style="@style/Widget.Neumorph.CardView"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>
            <soup.neumorphism.NeumorphButton
                android:layout_width="0dp"
                android:text="0"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="onclickZero"
                android:clickable="true"
                android:textColor="@color/teal_200"
                style="@style/Widget.Neumorph.CardView"
                android:focusable="true"
                android:id="@+id/zero"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>
            <soup.neumorphism.NeumorphButton
                android:id="@+id/dot"
                android:text="."
                android:textSize="35sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/teal_200"
                android:onClick="onclickDot"
                style="@style/Widget.Neumorph.CardView"
                android:clickable="true"
                android:focusable="true"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>
            <soup.neumorphism.NeumorphButton
                android:id="@+id/equal"
                android:text="="
                android:textSize="35sp"
                android:gravity="center"
                android:layout_width="0dp"
                style="@style/Widget.Neumorph.CardView"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onclickEqual"
                android:textColor="@color/purple_200"
                app:neumorph_shadowColorLight="@color/red"
                app:neumorph_shadowColorDark="#27537A"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>